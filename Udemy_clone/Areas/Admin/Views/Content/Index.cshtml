@model List<Video>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Content" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i>Create new Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Instructor
                </th>
                <th>
                    Description
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.VideoId))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.ApplicationUser.Name</td>
                    <td>@obj.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Content" asp-action="Edit" asp-route-id="@obj.VideoId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>

                            <form method="post" asp-controller="Content" asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <input type="hidden" name="id" value="@obj.VideoId" />
                                <button type="submit" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>